{
  "manifest_version": 3,
  "version": "2.2.0",
  "version_name": "v2.2.0 Beta",
  "name": "LinkSafer",
  "background":{
    "service_worker": "background.js"  
  },
  "description": "Save open Tabs quickly or save your own notice in a List.",
  "icons": {
    "128": "./src/img/favicon-128.png",
    "32": "./src/img/favicon-32x32.png",
    "16": "./src/img/favicon-16x16.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "./src/img/linksafer_icon.png"
  },
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "downloads",
    "activeTab",
    "nativeMessaging",
    "notifications",
    "windows",
    "scripting"
  ]
}
